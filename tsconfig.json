{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015"
        ],
        "sourceMap":true,
        "jsx":"react",
        "strict": true,
        "noImplicitReturns": true,
        "rootDir": "src",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true
    },
    "include":["**/*.ts","**/*.tsx"],
    "exclude":["node_modules"]
}
